@model IEnumerable<UrlShortenerApp.Models.UrlMapping>

<div class="container">
    <h2>Сокращатель ссылок</h2>

    <form asp-action="Shorten" method="post" class="mb-4">
        <input type="url" name="longUrl" class="form-control" placeholder="https://example.com" required />
        <button type="submit" class="btn btn-primary mt-2">Сократить</button>
    </form>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>Длинный URL</th>
                <th>Короткий URL</th>
                <th>Дата</th>
                <th>Клики</th>
                <th>Управление</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.LongUrl</td>
                    <td><a href="/@item.ShortCode" target="_blank">@item.ShortCode</a></td>
                    <td>@item.CreatedAt</td>
                    <td>@item.ClickCount</td>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <form asp-action="Edit" method="post" class="d-flex gap-1">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="url" name="newLongUrl" value="@item.LongUrl"
                                       class="form-control form-control-sm" style="min-width: 150px;" required />
                                <button type="submit" class="btn btn-sm btn-success">Сохранить</button>
                            </form>

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Вы уверены?')">Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>